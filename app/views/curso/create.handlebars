<div class="container">    
<div class="row mt-8">
    <h1 class="col-11">Cadastro de curso</h1>
    <button type="button" class="btn btn-primary mt-2 col-1 " aria-pressed="false"><i class="far fa-arrow-left"></i>Voltar</button>
</div>

<div class="bs-docs-section row col-8">
    <form action="/curso/create" method="post">
    <fieldset>
        </div>
        {{!-- sigla,nome,descricao,area --}}
        <div class="form-group">
        <label for="sigla">Sigla</label>
        <input type="text" maxlength="255" class="form-control" name="sigla" placeholder="Informe a Sigla do Curso">
        </div>

        <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" maxlength="255" class="form-control" name="nome" placeholder="Informe o nome do Curso">
        </div>

        <div class="form-group">
        <label for="descricao">Descricao</label>
        <textarea class="form-control" name="descricao" rows="3"></textarea>
        </div>
        <h3>Area</h3>
        <div class="form-group">
            <div class="custom-control custom-radio">
            <input type="radio" id="r2" name="customRadio" class="custom-control-input">
            <label class="custom-control-label" for="r2">Exatas</label>
            </div>
            <div class="custom-control custom-radio">
            <input type="radio" id="r3" name="customRadio" class="custom-control-input" >
            <label class="custom-control-label" for="r3">Biol√≥gicas</label>
            </div>
            <div class="custom-control custom-radio">
            <input type="radio" id="r1" name="customRadio" class="custom-control-input" checked="">
            <label class="custom-control-label" for="r1">Humanas</label>
            </div>

        </div>
        <button type="submit" class="btn btn-primary mt-3">Enviar</button>
    </fieldset>
    </form>
</div>
</div>